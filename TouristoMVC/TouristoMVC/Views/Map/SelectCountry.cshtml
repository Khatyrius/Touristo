@model TouristoMVC.Models.Country

@{
    ViewBag.Title = "SelectCountry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var countries = (List<SelectListItem>)ViewData["CountryList"];
    var location = (TouristoMVC.Models.Location)ViewData["Location"];
}

<h2>Select a country you want to go to</h2>
@using (Html.BeginForm("SelectCity", "Map", FormMethod.Post, new { @class = "ui large form" }))
{
    <div class="form-group">
            @Html.DropDownListFor(Model => Model.id, countries)
    </div>

    <div class="form-group">
        <input type="hidden" name="address" value="@location.Address" />
        <input type="hidden" name="lang" value="@location.Langtitude" />
        <input type="hidden" name="long" value="@location.Longtitude" />
        <input type="submit" value="Forward" class="btn btn-default" />
    </div>
}