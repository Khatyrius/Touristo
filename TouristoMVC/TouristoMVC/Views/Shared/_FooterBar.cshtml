@{
    var cookie = Request.Cookies["Bearer"];
    string token;

    if (cookie != null)
    {
        token = cookie.Value.ToString();
    }
    else
    {
        token = string.Empty;
    }

}
    <div class="navbar navbar-inverse navbar-fixed-bottom">
