            <div class="navbar-header">

                @Html.ActionLink("Touristo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (string.IsNullOrEmpty(token))
                    {
                        <li>@Html.ActionLink("Admin Panel", "LoginUser", "Users")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Countries", "Index", "Countries")</li>
                        <li>@Html.ActionLink("Cities", "Index", "Cities")</li>
                        <li>@Html.ActionLink("Attractions", "Index", "Attractions")</li>
                        <li>@Html.ActionLink("Users", "Index", "Users")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Users")</li>
                    }
                </ul>
            </div>
