@model IEnumerable<TouristoMVC.Models.Country>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Countries</h2>

<p>
    @Html.ActionLink("Add", "New")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            City List
        </th>
        <th>
            Options
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.name)
    </td>
    <td>
        @Html.ActionLink(
                            "Cities",                             //linkText
                            "ViewCities",                         //actionName
                            "Countries",                              //controlerName
                            new
                                 {
                                countryId = item.id,
                            },                                      //routeValues
                            null                                    //htmlAttributes
                     )
    </td>
    <td>
        @Html.ActionLink("Edit",
                 "Edit",
                 "Countries",
                 new { countryId = item.id },
                 null) |

        @Html.ActionLink("Delete",
                         "DeleteCountry",
                         "Countries",
                         new { countryId = item.id },
                         null)
    </td>
</tr>
}

</table>
